@model Course
<div class="card mb-3" id="@Model.Id">
    <div class="row">

        <div class="col-md-4">
            <img src="~/img/@Model.Image" alt="">
        </div>
        <div class="col-md-8">
            <div class="card-body"> 
                <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
                <h5>@Model.Title</h5>
                </a>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>